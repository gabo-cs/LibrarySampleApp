<h2>Crear un nuevo autor</h2>

<%= form_with model: @author do |f| %>

  <div class="mb-3">
    <label for="inputName" class="form-label">Ingrese el nombre:</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <label for="inputDateOfBirth" class="form-label">Fecha de nacimiento:</label>
    <%= f.date_field :date_of_birth, class: "form-control"%>
  </div>
  <p>
    <%= f.submit "Crear Autor", class: "btn btn-primary" %>
  </p>
<% end %>

<%= link_to "Ver Autores", authors_path %>
