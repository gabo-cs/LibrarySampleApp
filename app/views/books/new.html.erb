<h2>Crear un nuevo libro</h2>

<%= form_with model: @book do |f| %>

  <div class="mb-3">
    <label for="inputAuthor" class="form-label">Seleccione el autor:</label>

    <select name="book[author_id]" class="form-select form-select-sm" aria-label="Small select example">
      <option selected>Seleccione un autor</option>
      <% Author.all.each do |author| %>
        <option value="<%= author.id %>"><%= author.name %></option>
      <% end %>
    </select>
  </div>

  <div class="mb-3">
    <label for="inputName" class="form-label">Ingrese el nombre:</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <label for="inputName" class="form-label">Ingrese el ISBN:</label>
    <%= f.text_field :isbn, class: "form-control" %>
  </div>
  <p>
    <%= f.submit "Crear Libro", class: "btn btn-primary" %>
  </p>
<% end %>

<%= link_to "Ver Autores", authors_path %>
